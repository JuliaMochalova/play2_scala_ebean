@(questions: Seq[Question])

:css
.question {
	border: 1px solid #DDD;
	margin: 10px;
	padding: 10px;
}
.question .title {
	line-height: 30px;
}
:end

@main("") {
.questions
	@for( question <- questions ) {
	.question
		.title
			a href="@routes.Questions.show(question.id.toString)" | @question.title
		.content
			@question.content
		.ops
			a href="@routes.Questions.edit(question.id.toString)" | Edit

	}
}
